<div class = "container">
  <h2>新規登録</h2>
  <%= render "shared/error", obj: @room %>

  <%= form_with model: @room do |f| %>

    <div class="field">
      <%= f.label :name, "施設名(必須)" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label :detail, "施設詳細(必須)" %><br />
      <%= f.text_area :detail, autocomplete: "detail" %>
    </div>

    <div class="field">
      <%= f.label :price, "料金(必須)" %><br />
      <%= f.text_field :price, autofocus: true, autocomplete: "price" %>
    </div>

    <div class="field">
      <%= f.label :address, "住所(必須)" %><br />
      <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
    </div>

    <div class="field">
      <%= f.label :image, "施設画像(任意)" %><br />
      <%= f.file_field :image, autocomplete: "image" %>
    </div>

    <%= f.hidden_field :user_id, value: @user.id %>

    <div class="actions">
      <%= f.submit "登録" %>
    </div>
  <% end %>

  <%= link_to "キャンセル", :rooms %>
</div>
