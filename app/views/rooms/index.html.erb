<div class = "rooms_container">
  <h2>登録済み一覧</h2>

  <table>
    <thead>
      <tr>
        <th>画像</th>
        <th>施設名</th>
        <th>施設詳細</th>
        <th>料金(/泊)</th>
        <th>作成日</th>
      </tr>
    </thead>
    <tbody>
      <% @rooms.each do |room| %>
        <tr>
          <td class = "room_image">
            <% if room.image? %>
              <%= image_tag room.image.url %>
            <% else %>
              <%= image_tag ("https://rails-02-sample.herokuapp.com/assets/room/default-image-4e0ac6b8d01335b5b22fe6586af13644ae51dddb6aeabf35b9174e80f13cd09d.png") %>
            <% end %>
          </td>
          <td><%= link_to room.name, room_path(room) %></td>
          <td><%= room.detail %></td>
          <td>¥<%= room.price.to_i.to_s(:delimited) %>~</td>
          <td><%= room.created_at.to_s(:date_jp) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
