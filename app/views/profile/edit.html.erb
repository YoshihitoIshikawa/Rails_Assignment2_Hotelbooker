<div class = "container">
  <h2>編集</h2>

  <%= form_with model: @user do |f| %>
    <div class="field">
      <%= f.label :name, "名前" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label :image, "アイコン画像" %><br />
      <%= f.file_field :image, autocomplete: "image" %>
    </div>

    <div class="field">
      <%= f.label :introduction, "自己紹介" %><br />
      <%= f.text_area :introduction, autocomplete: "introduction" %>
    </div>

    <div class="actions">
      <%= f.submit "変更", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= link_to "キャンセル", :users_profile %>
</div>
